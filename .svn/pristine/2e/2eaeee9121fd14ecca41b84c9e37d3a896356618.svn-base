          </div>
      </mt-tab-container-item>
    </mt-tab-container>
    <mt-popup
      v-model="popupVisible"
      v-if="showConsultEvaluate"
    >
      <ConsultEvaluate
        :consultId="currentId"
        :workRoomId="currentWorkRoomId"
        :consultTypeId="2105"
        @change-modal="changeModal"
        @submit-success="submitSuccess"
      >
      </ConsultEvaluate>
    </mt-popup>
